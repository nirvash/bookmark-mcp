{
  "compilerOptions": {
    "target": "ES2016", 
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext" 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}